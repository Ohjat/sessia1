<Page x:Class="Demo_ex.page.SelectSurse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_ex.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectSurse">

    <Grid>
        <StackPanel Orientation="Horizontal">

            <StackPanel Width="400" Height="450" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Height="225"></StackPanel>
                <Button Height="20" Width="200" Click="Button_Click" >редактировать</Button>
                <StackPanel Height="4"></StackPanel>
                <Button Height="20" Width="200" Click="Button_Click_1"  >Выход</Button>

            </StackPanel>

            <StackPanel Width="400" Height="450">

                <TextBox x:Name="boxtitle" ></TextBox>

                <ComboBox Name="boxskill"></ComboBox>

                <TextBox x:Name="boxfuture"></TextBox>

                <StackPanel Height="4"></StackPanel>

                <DataGrid Width="400" Height="370" Name="resurs" ></DataGrid>




            </StackPanel>


        </StackPanel>

    </Grid>
</Page>
